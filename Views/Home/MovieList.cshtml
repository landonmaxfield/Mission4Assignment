@{
    ViewData["Title"] = "Movie List";
}

@model List<Applicationresponse>

<table class="table table-bordered table-striped">

    <thead class="fontweight bold">
        <tr>
            <td>Movie Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
        <tr>
            <td>@x.MovieTitle</td>
            <td>@x.Category</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-MovieTitle="@x.MovieTitle">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete">Delete</a></td>
        </tr>
            }
    </tbody>

</table>
